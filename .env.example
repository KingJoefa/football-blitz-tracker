# NFL Play Tracking API Environment Configuration

# Application Settings
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nfl_analytics
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_READ_HOST=localhost  # Read replica host (can be same as DB_HOST for single instance)

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE=30000
DB_POOL_ACQUIRE=60000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here_at_least_32_characters
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000  # 1 hour in milliseconds
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_MAX_REQUESTS_PUBLIC=100

# Caching
DEFAULT_CACHE_TTL=300  # 5 minutes
ANALYTICS_CACHE_TTL=600  # 10 minutes
STATIC_CACHE_TTL=3600  # 1 hour

# Real-time Updates
WEBSOCKET_PING_INTERVAL=25000
WEBSOCKET_PING_TIMEOUT=60000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/nfl-api.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9464
HEALTH_CHECK_ENABLED=true

# External Services
NFL_DATA_API_KEY=your_nfl_data_api_key
NFL_DATA_API_URL=https://api.nfldata.com/v1

# File Upload (if needed)
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=csv,json,txt

# Email Configuration (for alerts/notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Admin Configuration
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=secure_admin_password

# Development Tools (only for development)
DEV_TOOLS_ENABLED=false
SWAGGER_UI_ENABLED=false
DEBUG_SQL=false

# Testing Configuration
TEST_DB_NAME=nfl_analytics_test
TEST_REDIS_DB=1

# Production Optimizations
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
TRUST_PROXY=false

# Security Headers
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true

# Analytics and Metrics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Feature Flags
FEATURE_REAL_TIME_UPDATES=true
FEATURE_BULK_IMPORT=true
FEATURE_EXPORT_DATA=true
FEATURE_ADVANCED_ANALYTICS=true

# Cloud Provider Settings (AWS example)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=nfl-analytics-data

# Monitoring and Alerting
SENTRY_DSN=https://your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url